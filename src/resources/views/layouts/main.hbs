    <script>
        const mainHeader = document.getElementById("main-header")
        const mainPageEle = document.getElementById("home-mainpage")
        mainPageEle.style.height = "2000px"
        document.addEventListener("scroll", () => {
            const positionY = window.scrollY;
            if (positionY > 10) {
                mainHeader.style.opacity = "0";
                mainHeader.style.visibility = "hidden";
                mainPageEle.style.marginTop = "0";
                mainPageEle.style.paddingTop = "200px";
            }
            else {
                mainHeader.style.opacity = "1";
                mainHeader.style.visibility = "visible";
                mainPageEle.style.marginTop = "500px";
                mainPageEle.style.paddingTop = "75px";
            }
        });
    </script>
